<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Fundraising</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content animated fadeIn">
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <div class="row">
                    <div class="col-lg-6" align="center">
                        <h2>Create new fundraising campaign</h2>
                    </div>
                    <div class="col-lg-6" align="center">
                        <%#<a href="" class="btn btn-primary">Add New</a>%>
                        <%= link_to "Add New" , new_fundraising_path  , :class => "btn btn-primary" %>
                    </div>
                </div>
            </div>
            <div class="ibox-content text-center css-animation-box"><!-- Copy -->
                <br /><br />
                <h1 class="text-navy">Your campaigns</h1>
                <br /><br />

                <div class="row">

               <% @fundraisings.each do |fundraising|%>
               <div class="col-lg-4">
            <div class="ibox" style="border: 1px solid #f1e4e4; padding: 0px;">

                <div class="ibox-title">
                    <h5>
                    <%= fundraising.try(:title) %>
                    </h5>
                </div>
                <div class="ibox-content">
                    <div><!-- Image here -->
                    <%= image_tag fundraising.campaign_pic.thumb.url if fundraising.campaign_pic? %>

                    </div>
                    <br />
                    <h4>Info</h4>
                    <p>
                        <%= fundraising.try(:description) %>
                    </p>
                    <br />
                    <div><!--
                        <span>Status of funds:</span>
                        <div class="stat-percent">48%</div>
                        <div class="progress progress-mini">
                            <div style="width: 48%;" class="progress-bar"></div>
                        </div>-->
                    </div>
                    <br />
                    <div class="row  m-t-sm">
                        <div class="col-sm-4">

                        </div>
                        <div class="col-sm-4">

                        </div>
                        <div class="col-sm-4 text-right">

                             <%= link_to "View More" , {:controller=>"fundraisings", :action=>"show", :id => fundraising.id} , :class => "btn btn-primary"%>

                        </div>
                    </div>

                </div>
            </div>
        </div>
        <% end %>
    </div>
            </div>
        </div>
    </div>

</div>
</div>

<% content_for :javascript do %>

<script type="text/javascript">


$(function() {

    $('.animation_select').click(function () {
        $('#animation_box').removeAttr('class').attr('class', '');
        var animation = $(this).attr("data-animation");
        $('#animation_box').addClass('animated');
        $('#animation_box').addClass(animation);
        return false;
    });

    
});

</script>

<% end %>





