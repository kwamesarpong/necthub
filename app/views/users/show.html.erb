<div class="row wrapper border-bottom page-heading">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content text-center p-md">
                    <div class="row">
                        <div class="col-lg-12">
                            <h4>Profile</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-3">

        </div>
        <div class="col-lg-6">
            <div class="ibox float-e-margins">
                <div class="ibox-content border-bottom text-center p-md">
                    <div class="row">
                        <div class="col-lg-10">
                            <h3>Viewing my profile</h3>
                        </div>
                        <div class="col-lg-2">
                            <%= link_to "Edit Profile", edit_user_path(@user), :class => "btn btn-primary" %>
                        </div>
                    </div>
                </div>
                <div class="ibox-content border-bottom p-md">
                    <div class="row">
                            <div class="col-lg-4">
                                <div class="ibox-content border-bottom text-center p-md" style="background-color: #1ab394; color: #ffffff;">
                                    <br />
                                    <%= image_tag @user.user_pic.uthumb.url if @user.user_pic? %>
                           <!--   <img src="http://res.cloudinary.com/necthub/image/upload/v1500854799/profile_hq1hjc.jpg" class="img-circle" style="border: 5px solid #ffffff" /> -->
                                    <br />
                                </div>
                            </div>
                            <div class="col-lg-1">
                            </div>
                            <div class="col-lg-7">
                                <div class="">
                                    <h3><b>First Name</b></h3>
                                    <p><%= @user.first_name  %></p>
                                </div>
                                <hr />
                                <div class="">
                                    <h3><b>Last Name</b></h3>
                                    <p><%= @user.Last_name  %>  </p>

                                </div>
                                <hr />
                                <div class="">
                                    <h3><b>E-mail</b></h3>
                                    <p><%= @user.email  %>  </p>
                                </div>
                                <hr />
                                <div class="">
                                    <h3><b>Phone Number</b></h3>
                                    <p><%= @user.phone_number  %>  </p>
                                </div>
                                <hr />
                                <div class="">
                                    <h3><b>Profession</b></h3>
                                    <p><%= @user.profession  %>  </p>
                                </div>
                                <hr />
                                <div class="">
                                    <h3><b>Education</b></h3>
                                    <p><%= @user.education  %>  </p>
                                </div>
                                <hr />
                                <div class="">
                                    <h3><b>Skills</b></h3>
                                    <p><%= @user.skills  %>  </p>
                                </div>

                                <hr />
                                 <div class="">
                                    <h3><b>Year Group</b></h3>
                                    <p><%= @user.YearGroup  %>  </p>
                                </div>

                                <br />
                                <br />
                                <br />
                                <div class="">
                                    <%= link_to "Edit Profile", edit_user_path(@user), :class => "btn btn-primary" %>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            </div>
        </div>
    </div>

</div>