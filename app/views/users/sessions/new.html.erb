<div class="row">
  <div class="col-lg-4" style="height: 840px; background-color: white;" align="center">
    <br /><br /><br /><br /><br />
    <div class="row">
    <div class="col-lg-1">
    </div>
    <div class="col-lg-10">
    <img alt="image" src="<%= image_url 'logo12341.png' %>" width="150px" height="50px" />
    <h2>Sign in to your organisation</h2>
    <p>Receive all the benefits your organisation has to offer</p>
    <hr />
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.email_field :email, :placeholder => "Email", :class => "form-control input-lg m-b", autofocus: true  %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", :placeholder => "Password", :class => "form-control input-lg m-b"  %>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end -%>

    <br /><br />

    <div class="actions">
      <%= f.submit "Log in", :class => "btn btn-primary", :style => "width: 300px;" %>
    </div>

    <% end %>
    <br /><br />
    <p>Already part of an organisation? <%= render "users/shared/links" %></p>
    <br />
    </div>
    <div class="col-lg-1">
    </div>
    </div>
  </div>
  <div class="col-lg-8" style="height: 840px;  background-image: url(http://res.cloudinary.com/necthub/image/upload/v1501581665/background_occwcx.jpg)">
  </div>
</div>
