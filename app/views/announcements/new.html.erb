<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Post Announcement</h2>
        <ol class="breadcrumb">
            <li>
                <a href="index.html">Home</a>
            </li>
            <li class="active">
                <strong>Post Announcement</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h2>Post Announcements</h2>
                </div>

                <div class="ibox-content">

                <%= form_for(@announcement)  do |f|%>
                    <div align="center">
                        <p>Fill in your announcement details here</p>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="container">
                            <div>
                                <label class="control-label">Announcement Title</label>
                            </div>
                            <br />
                            <div class="col-sm-7">
                             <%= f.text_field :title , :placeholder => "Title" , :class => "form-control input-lg m-b"  %>

                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="container">
                            <div>
                                <label class="control-label">Announcement Description</label>
                            </div>
                            <br />
                            <div class="col-sm-7">
                                <%= f.text_field :description , :class => "form-control input-lg m-b"  %>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <!-- "a href" link goes back to previous page -->

                            <%= link_to "Back" , announcements_path,  :class => "btn btn-white" %>
                            <%= f.submit "Create Announcements" , :class => "btn btn-primary" %>

                        </div>
                    </div>
                    <br />
                    <br />
                 <% end %>

                </div>
            </div>
        </div>
    </div>

</div>