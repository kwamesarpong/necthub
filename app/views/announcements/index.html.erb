<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Announcements</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content">

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div class="row">
                    <div class="col-lg-6" align="center">
                        <h2>Post Announcements</h2>
                    </div>
                    <div class="col-lg-6" align="center">
                        <%#<a href="" class="btn btn-primary">New Event</a>%>
                        <%= link_to "New Announcement" , new_announcement_path , :class => "btn btn-primary"  %>
                    </div>
                </div>

                </div>

            <div class="ibox-content text-center css-animation-box">
                <br /><br />
                <h1 class="text-navy">Your Announcements</h1>
                <br /><br />


            <% for announcement in @announcements do %>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="ibox" style="border: 1px solid #f1e4e4; padding: 0px;">
                            <div class="ibox-title">
                                <h5><%= announcement.try(:title)%></h5>
                            </div>
                            <div class="ibox-content">

                                <br />
                                <h4>Info</h4>
                                <p>
                                    <%= announcement.try(:description)%>
                                </p>
                                <br />

                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
            </div>
            </div>
        </div>
    </div>

</div>

<% content_for :javascript do %>

<script type="text/javascript">


$(function() {

    $('.summernote').summernote();

    var edit = function () {
