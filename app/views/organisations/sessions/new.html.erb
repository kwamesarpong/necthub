<div class="row">
  <div class="col-lg-4 col-md-4 hidden-xs hidden-sm" style="height: 820px; background-image: url(http://res.cloudinary.com/necthub/image/upload/v1501376777/signup_tybife.jpg)">
  </div>
  <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12" style="height: 820px; background-color: white;" align="center">
    <br /><br />
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"style="padding: 20px 0px 20px 0px;">
      </div>
    </div>
    <img alt="image" src="<%= image_url 'logo12341.png' %>" width="150px" height="50px" />
    <h2>Sign in</h2>
    <div class="row">
      <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
      </div>
      <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
        <hr />
      </div>
      <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
      </div>
    </div>
    
    <div class="row">
      <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
      </div>
      <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" align="center">
        <h3>Manage your organisation</h3>
        <br /><br />
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
        <div class="form-group">
          <%= f.email_field :email,:placeholder => "Email", :class => "form-control input-lg m-b", autofocus: true %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, :placeholder => "Password", :class => "form-control input-lg m-b", autocomplete: "off" %>
        </div>
        <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me, :class => "i-checks" %>
          <%= f.label :remember_me %>
        </div>
        <% end -%>
        <div class="actions">
          <%= f.submit "Log in", :class => "btn btn-primary", :style => "width: 300px;" %>
        </div>
        <% end %>
        <br /><br />
        <p>Don't have a NectHub account? <%= render "organisations/shared/links" %></p>
        <div style="padding: 50px 0px 50px 0px;">
        </div>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
      </div>
    </div>
    
  </div>
</div>


<% content_for :javascript do %>

<script type="text/javascript">


$(function() {


    $('.i-checks').iCheck({
        checkboxClass: 'icheckbox_square-green',
        radioClass: 'iradio_square-green',
    });


});

</script>

<% end %>