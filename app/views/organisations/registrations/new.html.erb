<div class="row">
  <div class="col-lg-4 col-md-4 hidden-xs hidden-sm" style="height: 820px; background-image: url(http://res.cloudinary.com/necthub/image/upload/v1501376777/signup_tybife.jpg)">
  </div>
  <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12" style="height: 820px; background-color: white;" align="center">
    <br /><br />
    <img alt="image" src="<%= image_url 'logo12341.png' %>" width="150px" height="50px" />
    <h2>Sign up for your Necthub Account</h2>
    <p>Set up your organisation in a few seconds</p>
    <div class="row">
      <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
      </div>
      <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
        <hr />
      </div>
      <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
      </div>
    </div>
    
    <div class="row">
      <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
      </div>
      <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" align="center">
        <h3>Fill out the form below to get started</h3>
        <br /><br />
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        
        <div class="form-group">
          <%= f.text_field :organisation_name, :placeholder => "Organisation Name", :class => "form-control input-lg m-b"  %>
        </div>
        <div class="form-group">
          <%= f.email_field :email, :placeholder => "Organisation E-mail", :class => "form-control input-lg m-b"  %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, :placeholder => "Password", :class => "form-control input-lg m-b"  %>
          <% if @minimum_password_length %>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, :placeholder => "Confirm Password", :class => "form-control input-lg m-b" %>
        </div>
        <br /><br />
        <div>
          <p>By signing up, I agree to NectHub's terms and conditions</p>
        </div>
        <br /><br />
        <div class="actions">
          <%= f.submit "Sign up", :class => "btn btn-primary", :style => "width: 300px;" %>
        </div>
        <% end %>
        <br /><br />
        <p>Already have a NectHub account? <%= render "organisations/shared/links" %></p>
        <div style="">
        </div>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
      </div>
    </div>
    
  </div>
</div>

