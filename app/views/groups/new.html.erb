<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Create Group</h2>
        <ol class="breadcrumb">
            <li>
                <a href="index.html">Home</a>
            </li>
            <li>
                <a>Events</a>
            </li>
            <li class="active">
                <strong>Create event</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h2>Create your Group</h2>
                </div>

                <div class="ibox-content">

                <%= form_for (@group)  do |f|%>
                    <div align="center">
                        <p>Fill in your group details here</p>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="container">
                            <div>
                                <label class="control-label">Group Name</label>
                            </div>
                            <br />
                            <div class="col-sm-7">
                             <%= f.text_field :group_name , :placeholder => "Group Name" , :class => "form-control input-lg m-b"  %>

                            </div>
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <!-- "a href" link goes back to previous page -->


                            <%= f.submit "Create Group" , :class => "btn btn-primary" %>


                        </div>
                    </div>
                 <% end %>


                </div>
            </div>
        </div>
    </div>

</div>