<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Jobs</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content">

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div class="row">
                    <div class="col-lg-6" align="center">
                        <h2>Post a Job</h2>
                    </div>
                    <div class="col-lg-6" align="center">
                        <%#<a href="" class="btn btn-primary">New Event</a>%>
                        <%= link_to "New Job" ,new_job_path , :class => "btn btn-primary"  %>
                    </div>
                </div>

                </div>

            <div class="ibox-content text-center css-animation-box"><!-- Copy -->
                <br /><br />
                <h1 class="text-navy">Your Jobs</h1>
                <br /><br />



                <div class="row">

       <% for job in @jobs do %>
        <div class="col-lg-4">
            <div class="ibox" style="border: 1px solid #f1e4e4; padding: 0px;">
                <div class="ibox-title">
                    <h5><%= job.try(:company_name)%></h5>
                </div>
                <div class="ibox-content">
                    <div><!-- Image here    event_pic.nthumb.url if event.event_pic?  -->
                        <%= job.try(:position)%>
                    </div>
                    <br />
                    <h4>Info</h4>
                    <p>
                        <%= job.try(:job_description)%>
                    </p>
                    <br />

                </div>
            </div>
        </div>
         <% end %>

    </div>

            </div>
            </div>
        </div>
    </div>

</div>

