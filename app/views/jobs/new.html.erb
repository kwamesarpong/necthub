<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Create Event</h2>
        <ol class="breadcrumb">
            <li>
                <a href="index.html">Home</a>
            </li>
            <li class="active">
                <strong>Create event</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h2>Create your event</h2>
                </div>

                <div class="ibox-content">

                <%= form_for (@job)  do |f|%>
                    <div align="center">
                        <p>Fill in Job details here</p>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="container">
                            <div>
                                <label class="control-label">Company Name</label>
                            </div>
                            <br />
                            <div class="col-sm-7">
                             <%= f.text_field :company_name , :placeholder => "company name" , :class => "form-control input-lg m-b"  %>

                            </div>
                        </div>
                    </div>

                     <div class="form-group">
                        <div class="container">
                            <div>
                                <label class="control-label">Position(Role)</label>
                            </div>
                            <br />
                            <div class="col-sm-7">
                                <%= f.text_field :position , :class => "form-control input-lg m-b"  %>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="container">
                            <div>
                                <label class="control-label">Job Description</label>
                            </div>
                            <br />
                            <div class="col-sm-7">
                                <%= f.text_field :job_description , :class => "form-control input-lg m-b"  %>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <!-- "a href" link goes back to previous page -->

                            <%= link_to "Back" , jobs_path,  :class => "btn btn-white" %>
                            <%= f.submit "Create Job" , :class => "btn btn-primary" %>

                        </div>
                    </div>
                    <br />
                    <br />
                 <% end %>

                </div>
            </div>
        </div>
    </div>

</div>
